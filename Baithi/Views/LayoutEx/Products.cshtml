@model List<Model.Framework.tbl_product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/FrontEndLayout.cshtml";
}

<div id="wp-products">
    <h2>SẢN PHẨM CỦA CHÚNG TÔI</h2>
   
    <ul id="list-products">
        @foreach (var item in Model)
        {
        <div class="item">
            <img src="~/assets/@item.Images" alt=""  width="256" height="174"/>

            <div class="stars">
                <span>
                    <img src="assets/star.png" alt="" />
                </span>
                <span>
                    <img src="assets/star.png" alt="" />
                </span>
                <span>
                    <img src="assets/star.png" alt="" />
                </span>
                <span>
                    <img src="assets/star.png" alt="" />
                </span>
                <span>
                    <img src="assets/star.png" alt="" />
                </span>
            </div>

            <div class="name">Tên món: @item.Name</div>
            <div class="desc"> @item.Detail</div>
            <div class="price">Giá: @item.Price</div>
            <div class="button" style="text-align: center">
                <a href="@Url.Action("Details", "Products", new {id = item.ID})" class="btn btn-outline-dark ms-2">
                 Xem thêm</a>
            </div>
            </div>


            }
</ul>
    
    <div class="list-page">
        <div class="item">
            <a href="">1</a>
        </div>
        <div class="item">
            <a href="">2</a>
        </div>
        <div class="item">
            <a href="">3</a>
        </div>
        <div class="item">
            <a href="">4</a>
        </div>
    </div>
</div>

<div id="saleoff" >
    <div class="box-left" style="text-align:center">
        <h1>
            <span>GIẢM GIÁ LÊN ĐẾN</span>
            <span>35%</span>
        </h1>
    </div>
    <div class="box-right"></div>
</div>

